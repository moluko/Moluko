- content_for :title do
  Moluko - All User Histories

.breadcrumb
  %ul
    %li Administrator
    %li &raquo;
    %li= link_to 'Dashboard', dashboard_path
    %li &raquo;
    %li All User Histories

.content
  %h2 All User Histories

  = page_entries_info @user_histories
  %br/
  %br/
  = will_paginate @user_histories
  %br/
  %table.global
    %thead
      %tr
        %th Email
        %th Date
        %th Controller
        %th Action
        %th Params
    %tbody
      - @user_histories.each do |user_history|
        %tr
          %td= link_to user_history.user.email, user_user_histories_path(user_history.user)
          %td= user_history.created_at.to_s(:long)
          %td= user_history.controller
          %td= user_history.action
          %td= h user_history.params
  %br/
  = will_paginate @user_histories
  %br/
