- content_for :title do
  Moluko - Login
- content_for :body_bottom do
  :javascript
    $('#nav-login').addClass('active');
    $('input:text:first').focus();
    $('input').keypress(function(e){
      if (e.which == 13) {
        e.preventDefault();
        $('form').submit();
      }
    });
#login
  .side-action
  .content{:style => "padding: 15px 30px"}
    %h1 Login
    %h4 Enter your information below to log in.
    = form_for @user_session do |f|
      %ol
        %li
          = f.label :email
          = f.text_field :email
        %li
          = f.label :password
          = f.password_field :password
        %li.forgot-password
          = link_to "Forgot your password?", new_password_reset_path
        %li
          = link_to_function "Login", "$(this).closest('form').submit()", :class => "small-button"
      - unless flash[:error].nil?
        .info.error= flash[:error]
